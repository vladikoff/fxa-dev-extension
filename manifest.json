{
  "manifest_version": 2,
  "icons": {
    "48": "icon.png",
    "128": "icon128.png"
  },
  "name": "FxA Dev Extension",
  "version": "1.0",
  "applications": {
    "gecko": {
      "id": "fxa@mozilla.org"
    }
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "permissions": [
    "tabs",
    "activeTab",
    "http://restmail.net/",
    "https://latest.dev.lcip.org/",
    "https://stable.dev.lcip.org/",
    "https://accounts.stage.mozaws.net/",
    "https://accounts.firefox.com/"
  ],

  "browser_action": {
    "default_icon": {
      "19": "button.png",
      "38": "button38.png"
    },
    "default_title": "Create account and verify!"
  }
}
